<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_service_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_marginRight="15dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center|left"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="13dp"
            android:paddingEnd="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="5dp"
            android:text="Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#bfbfbf" />

        <TextView
            android:id="@+id/service_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:text="THE DESCRIPTION GOES HERE
            THE DESCRIPTION GOES HERE THE DESCRIPTION
            GOES HERE THE DESCRIPTION GOES THE DESCRIPTION
            GOES HERETHE DESCRIPTION GOES HERETHE DESCRIPTION GOES HERE"
            android:textColor="#000"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
</android.support.v7.widget.CardView>