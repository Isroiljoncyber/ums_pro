<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_tarrif_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tarrif_name"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center|left"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="3dp"
            android:text="Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#bfbfbf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tarrif_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_baraka" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tarrif_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        android:text="THE DESCRIPTION GOES HERE THE DESCRIPTION GOES HERE THE DESCRIPTION GOES HERE THE DESCRIPTION GOES THE DESCRIPTION GOES HERETHE DESCRIPTION GOES HERETHE DESCRIPTION GOES HERE"
                        android:layout_marginEnd="40dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1" />
                        <android.support.v7.widget.CardView
                            android:layout_width="90dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp" >
                            <TextView
                                android:id="@+id/aaa"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:background="@drawable/button_background"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/apply_button"
                                android:textColor="#FFF"
                                 />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
