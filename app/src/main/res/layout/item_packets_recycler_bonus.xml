<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_packets_bonus_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="6dp"
    app:cardElevation="5dp"
    android:layout_marginTop="6dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/packet_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center|left|bottom"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:text="To'plam 300 Mb"
                android:textColor="#000"
                android:textSize="18sp"
                tools:ignore="NestedWeights,RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/packet_bonus"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:text="+ 2000 Mb Tungi internet paket - BONUS "
                android:textColor="@color/colorPrimary"
                android:paddingStart="15dp" />
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:id="@+id/packet_cost"
                android:layout_width="105dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="Olish"
                android:textColor="@color/white" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.CardView>